<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="180dp"
    android:background="#8C55"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:layout_width="50dp"
        android:contentDescription="@string/last_friend_chat_image"
        android:id="@+id/widget_profile_Image"
        android:background="@drawable/public_profile"
        android:layout_height="50dp" />

    <TextView
        android:layout_toEndOf="@+id/widget_profile_Image"
        android:id="@+id/widget_profile_name"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="22dp"
        android:padding="5dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/widget_profile_Image" />

    <TextView
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/widget_message_text"
        android:layout_below="@+id/widget_profile_Image"
        android:layout_width="180dp"
        android:layout_height="50dp" />

    <Button
        android:layout_width="match_parent"
        android:text="@string/open_chat"
        android:id="@+id/openchat"
        android:layout_below="@id/widget_message_text"
        android:layout_height="wrap_content" />
</RelativeLayout>